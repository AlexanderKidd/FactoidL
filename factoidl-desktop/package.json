{
  "name": "factoidl-desktop",
  "version": "2.0.0",
  "description": "FactoidL Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/factoidL_icon128.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/factoidL_icon128.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"FactoidL\"",
    "package-linux" : "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/factoidL_icon128.png --prune=true --out=release-builds"
  },
  "author": "Alexander Kidd, FactoidL Group",
  "license": "Apache-2.0",
  "dependencies": {
    "electron": "^9.1.0"
  },
  "devDependencies": {
    "electron-packager": "^9.0.1"
  }
}
