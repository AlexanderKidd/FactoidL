 * Description: Chrome js manifest file.
 * Responsible for security concerns and misc. metadata.
 */

{
  "manifest_version": 2,
  "name": "FactoidL (beta)",
  "description": "Checks the accuracy of webpage content based on other web sources.",
  "version": "0.9",

  "icons": {  "16":  "factoidL_icon16.png",
              "48":  "factoidL_icon48.png",
              "128": "factoidL_icon128.png" },

  "background": {
        "scripts": ["jquery-1.11.3.min.js", "background.js"],
        "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-1.11.3.min.js", "content.js"]
    }
  ],

// Will load when clicked on (next to omnibox) with given icon and given popup window.
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Let's fact-check!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "*://*/*"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
